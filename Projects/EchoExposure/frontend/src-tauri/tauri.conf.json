{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "EchoExposure",
  "version": "0.1.0",
  "identifier": "com.echopentest.echoexposure",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "EchoExposure",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
  "active": true,
  "targets": "all",
  "icon": [
    "icons/icon.ico"
  ],
  "resources": [
    "../../backend/dist/EchoExposureAPI",
    "icons/echopentest-logo.png"
  ]
}

}
